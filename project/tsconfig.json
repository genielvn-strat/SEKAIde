{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "target": "ES6",
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "app/(auth)/sign-in/[[...sign-in]]/page.tsx.back",
        "app/(auth)/sign-up/[[...sign-up]]/page.tsx.back",
        "app/page.tsx.back",
        "app/(dashboard)/projects/page.tsx.back",
        "app/(dashboard)/analytics/page.tsx",
        "app/(dashboard)/calendar/page.tsx.back",
        "app/(dashboard)/team/page.tsx.back",
        "app/(dashboard)/dashboard/page.tsx.back",
        "app/(dashboard)/projects/[id]/page.tsx.back"
    ],
    "exclude": ["node_modules"]
}
